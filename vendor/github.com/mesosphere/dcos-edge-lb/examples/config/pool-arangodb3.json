{
    "pools": [{
        "name": "minimal-pool",
        "count": 1,
        "haproxy": {
            "frontends": [{
                "bindPort": 80,
                "protocol": "HTTP",
                "linkBackend": {
                    "defaultBackend": "arangodb3"
                }
            }],
            "backends": [{
                "name": "arangodb3",
                "protocol": "HTTP",
                "rewriteHttp": {
                    "sticky": { }
                },
                "servers": [{
                    "framework": {
                        "value": "arangodb3"
                    },
                    "task": {
                        "value": "^arangodb3-DBServer.*$",
                        "match": "REGEX"
                    },
                    "port": {
                        "name": "ArangoDB"
                    }
                }]
            }]
        }
    }]
}
